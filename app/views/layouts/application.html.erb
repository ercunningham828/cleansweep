<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <!--[if lt IE 9]> 
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <![endif]-->
    <title>Cleansweep</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
    <meta name="description" content="">
    <meta name="author" content="WebThemez">
   
    <!--[if lt IE 9]>
        <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->
    <!--[if lte IE 8]>
    <script type="text/javsascript" src="http://explorercanvas.googlecode.com/svn/trunk/excanvas.js"></script>
    %= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <![endif]-->
</head>
<body>

<header class="header">
      <div class="container">
            <nav class="navbar navbar-inverse" role="navigation">
                <div class="navbar-header">
                    <button type="button" id="nav-toggle" class="navbar-toggle" data-toggle="collapse" data-target="#main-nav">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a href="" class="navbar-brand scroll-top logo"><b>Clean Sweep</b></a>
                </div>
                <!--/.navbar-header-->
                <div id="main-nav" class="collapse navbar-collapse">
                    <ul class="nav navbar-nav" id="mainNav">
                         <% if current_user %>
                    <div class='loggedinmenu'>
                       Hello <%=(current_user.name || current_user.email)%>!
                      <button type="button" class="btn btn-sm"> 
                               <%= link_to root_path, class: '' do %>
                          <span class="glyphicon glyphicon-home"></span>
                    <% end %></button>
                    <button type="button" class="btn btn-sm"> 
                       <%= link_to edit_user_registration_path, class: '' do %>
                       <span class="glyphicon glyphicon-user"></span>
                    <% end %></button>
                   <button type="button" class="btn btn-sm">   <%= link_to "",destroy_user_session_path, method: :delete, class: 'glyphicon glyphicon-log-out'%>
                    </button> 
                  <%end%>
                   </div>
                    </ul>
                </div>
                <!--/.navbar-collapse-->
            </nav>
            <!--/.navbar-->
     </div>
        <!--/.container-->
    </header>
<div class='alert'>
<% if flash[:notice] %>

         <div class="alert alert-success">
           <button type="button" class="close" data-dismiss="alert">&times;</button>
           <%= flash[:notice] %>
         </div>
       <% elsif flash[:error] %>
         <div class="alert alert-danger">
           <button type="button" class="close" data-dismiss="alert">&times;</button>
           <%= flash[:error] %>
         </div>
       <% elsif flash[:alert] %>
         <div class="alert alert-warning">
           <button type="button" class="close" data-dismiss="alert">&times;</button>
           <%= flash[:alert] %>
         </div>
       <% end %>

<body>
 
<%= yield %>

 </div>
 <!--/.container-->
    </section>
    <footer>
        <div class="container">
            <div class="social text-center">
                <a href="https://github.com/ercunningham828/cleansweep"><i class="fa fa-github"></i></a>
            </div>

            <div class="clear"></div>
            <!--CLEAR FLOATS-->
        </div>
    </footer>
    <!--/.page-section-->
    <section class="copyright">
        <div class="container">
            <div class="row">
                <div class="col-sm-12 text-center">
                    Copyright 2015 | Emily Cunningham
                </div>
            </div>
            <!-- / .row -->
        </div>
    </section>
    <a href="#top" class="topHome"><i class="fa fa-chevron-up fa-2x"></i></a>

    
</body>
</html>
